<% provide(:title, 'new site') %>
<div class="span4 offset1">
  <%= form_for(@site,:html => { :class => "form-horizontal" }) do |f| %>
    <div class="controls"><h2>add new</h2></div>
  
    <div class="control-group">
    <%= f.label :name ,class:"control-label"%>
    <div class="controls"><%= f.text_field :name,:placeholder =>"Please input cateory!" %></div>
  </div>
   <div class="control-group">
    <%= f.label :url ,class:"control-label"%>
    <div class="controls"><%= f.text_field :url,:placeholder =>"Please input cateory!" %></div>
  </div>
 <div class="control-group">
    <%= f.label :category ,class:"control-label"%>
    <div class="controls"><%= f.text_field :category,:placeholder =>"Please input cateory!" %></div>
  </div>
  <div class="controls">
    <%= f.submit "create", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
