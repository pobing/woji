<!-- Modal -->
<div id="newUserModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h5 id="myModalLabel">添加新用户</h5>
  </div>
  <div class="modal-body">
    <%= form_tag("/api/users", :method => "post",:class=>"form-horizontal") do %>
  <%#= render 'shared/error_message' %>
  <div class="control-group">
    <%= label_tag 'email',nil,:class=>"control-label" %>
    <div class="controls"><%= email_field(:user,:email)%></div>
  </div>
  <div class="control-group">
    <%= label_tag 'login' ,nil,:class=>"control-label"%>
    <div class="controls"><%= text_field(:user,:login)%></div>
  </div>
  <div class="control-group">
    <%= label_tag 'password', nil,:class=>"control-label"%>
    <div class="controls"><%= password_field(:user,:password)%></div>
  </div>
  <div class="modal-footer">
    <div class="controls">
     <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
      <%= submit_tag "Save changes", class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
  </div>
</div>