<div class="span7">
	<h4>Archives</h4>
  <hr>
	<% @posts_by_month.each do |monthname, posts| %>
	<p class="month-archive"><%= monthname %></p>
	 <div class="archive">
	    <ul class="archive">
	    <% posts.each do |post| %>
	    <li class="archive"><p class="archive-post"><%=link_to post.title, post,:title => post.title %>
       <span class="pull-right"><%=string_time(post.created_at)%></span>
	    </p></li>
	    <% end %>
	    </ul>
	</div>
	<% end %>
</div>