<%= render 'form' %>
<div>
    <% @posts.each do |post|  %> 
      <div class="title">
        <h3><%= link_to post.title,post %></h3>
      </div> <!-- .title -->
      <p>分类:<%=post.type_s %>  by: pobing </p>
      <div class="POST">
        <p><%=post.content%></p>
        <p>发布于: <%=time_ago_in_words(post.created_at)%> 
          <%unless post.tags.empty? %>
          标签: <%=post.tags.map(&:name).join(",")%>
          <%end%>
          <%= link_to '删除', post, confirm: 'Are you sure?', method: :delete %> </p>
      </div> 
    <%end%>
   
    <%if @posts.empty? %>
    <p>抱歉,该栏目下无结果!</p>
    <%end%>
    <%= will_paginate %>
    
</div> <!-- .entry -->