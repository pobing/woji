<div class="span10">
  <div class="top">
    <h3 class="muted"><%=link_to "我记-WoJi.com",root_path %></h3>
    <% if current_user %>
      <ul class="nav nav-pills pull-right">
        <li><%=link_to (image_tag(current_user.small_avatar)),current_user %></li>
        <li><%= link_to current_user.full_name, current_user %></li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown"
              href="#">
              帐号
          <b class="caret"></b>
          <!-- <i class="icon-user"></i> -->
          <%#= gravatar_for current_user,{size:20} %>
          </a>
          <ul class="dropdown-menu">
            <li><%#= link_to "Profile",current_user %></li>
            <li><%= link_to "个人设置",edit_user_path(current_user) %></li>
            <li><%= link_to "管理", "/manage/index" %></li>
            <li><a href="/signout" target="_blank">退出</a></li>
          </ul>
        </li>
      </ul>
    <% end %>
  </div>
  <ul class="nav nav-pills">
    <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "首页", root_path %>
    <% if current_user %>
      <li class="<%= 'active' if current_page?(posts_path(:type=>0)) %>"><%=link_to "说说",posts_path(:type=>0)%></li>
      <li class="<%= 'active' if current_page?(posts_path(:type=>1)) %>"><%=link_to "日记",posts_path(:type=>1)%></li>
      <li class="<%= 'active' if current_page?(posts_path(:type=>6)) %>"><%=link_to "工作",posts_path(:type=>6)%></li>
      <li class="<%= 'active' if current_page?('/posts/archives') %>"><%=link_to "归档","/posts/archives"%></li>
      <li><a href="http://www.flickr.com/photos/cn_dong/" target="_blank">图片</a></li>
      <li class="<%= 'active' if current_page?(posts_path(:type=>7)) %>"><a href="#">微博</a></li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown"
              href="#"> 更多<b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%=link_to "周记",posts_path(:type=>2)%></li>
          <li><%=link_to "月记",posts_path(:type=>3)%></li>
          <li><%=link_to "年记",posts_path(:type=>4)%></li>
          <li><%=link_to "自传",posts_path(:type=>5)%></li>
        </ul>
      </li>
    <% else %>
      <li class="<%= 'active' if current_page?(about_path) %>"><%= link_to "关于","#" %></li>
      <li class="<%= 'active' if current_page?('contact_path') %>"><%= link_to "联系","#" %></li>
      <li class="<%= 'active' if current_page?('/signin') %>"><%= link_to "登录","/signin"%></li>
      <li class="<%= 'active' if current_page?('/signup') %>"><%=link_to "注册", "/signup"%></li>
    <% end %>
  </ul>
</div>
<script type="text/javascript">
</script>
