<% provide(:title, "Sign in") %>
<div class="span6 offset2">
  <%= form_for(:session,url: sessions_path,:html => { :class => "form-horizontal" }) do |f| %>
    <div class="controls">
      <h2 class="form-signin-heading">Please sign in </h2>
      <p>Or New user? <%=link_to "Sign up now!", signup_path %></p>
    </div>
    <div class="control-group">
      <%= f.label :login ,class:"control-label"%>
      <div class="controls">
        <%= f.text_field :email,:placeholder => "email/login" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password ,class:"control-label"%>
      <div class="controls">
        <%= f.password_field :password,:placeholder => "password" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
          <%=f.check_box "remember",:value=>"1" %>
        Remember me
        </label>
      <%=f.submit "sign in", class:"btn btn-large btn-primary" %> <%=link_to "Forgotten passowrd?",new_password_reset_path %>
      </div>
  </div>
  <%end%>
</div>