<% provide(:title, @user.name) %>
<div class="span8">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <aside class="span4">
      <section>
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
      <section>
        Email: <%=@user.email%>
      </section>
    </aside>
    <div class="span8">
      <% if @user.posts.any? %>
          <%= render '/posts/posts' %>
      <% end %>
      <%= will_paginate @posts %>
    </div>
  </div>
</div>