<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Name</th>
    <th>Nick name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Avatat</th>
    <th>Hashed password</th>
    <th>Salt</th>
    <th>Sex</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.name %></td>
    <td><%= user.nick_name %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td><%= user.avatat_id %></td>
    <td><%= user.hashed_password %></td>
    <td><%= user.salt %></td>
    <td><%= user.sex %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

