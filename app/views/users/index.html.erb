<h1>Listing users</h1>
<%= link_to 'New User', new_user_path %></p>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Nick name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Avatat</th>
    <th>Sex</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.nick_name %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td><%= user.avatat_id %></td>
    <td><%= user.sex %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


